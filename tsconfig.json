{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020"
      ],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "skipLibCheck": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}